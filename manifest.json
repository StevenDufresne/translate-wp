{
    "manifest_version": 3,
    "name": "Translate on wp.org",
    "version": "1.1",
    "description": "Translate selected text using translate.wordpress.org",
    "permissions": ["contextMenus", "activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }